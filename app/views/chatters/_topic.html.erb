<li class="chatter_topic hover_visibility_toggle dot_seperator" >
  <p class="chatter_content">
    <span class="user_avatar">
      <%= link_to_user_image chatter.user %><br/>
    </span>
    <span class="user_name">
      <%= link_to_user_name chatter.user %>
    </span>
    <span class="chatter_content_body">
      " says : "
      <%= auto_link(chatter.content) %>
    </span>
  </p>
  <div class="chatter_photo">
    <%= image_tag(chatter.chatter_photo) if chatter.chatter_photo.present? %>
  </div>
  <p class="statistic">
    <span class="timestamp">P <%= time_ago_in_words(chatter.created_at) %> ago.</span>
    C <%= @topic.comments_count %> comments
  </p>
  <div class="chatter_comments">
    <ul>
      <%= render :partial => 'comment', :collection => topic.comments, :as => :comment %>
    </ul>
  </div>
  <div class="chatter_actions hover_visibility_visible hover_faint">
    <% if current_user?(chatter.user) || admin_user? %>
      <%= button_to "X", chatter, :method => :delete, :confirm => "You sure?",
                            :title => "Delete this comment", :class => "x_button" %>
    <% end %>
  </div>
</li>
