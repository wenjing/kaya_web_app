<%= form_for @invitation, :url => @meet ? meet_invitations_path(@meet) : user_invitations_path(@user),
                            :html => {:class => "form_toggle"} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div id="new_invitation" class="form_toggle_content">
    <%= f.label :invitee, "Type your friends emails" %><br/>
    <%= f.text_area :invitee, :class => "limit_size expand30-150 round_sharp",
                              :max_height => 100, :limit_size => 200,
                              :placeholder => "Type your friends emails here" %><br/>
    <%= f.label :message, "Type your optional messages" %><br/>
    <%= f.text_area :message, :class => "limit_size expand300-400 round_sharp",
                              :max_height => 200, :limit_size => 500,
                              :placeholder => "Type optional messages here" %>
  </div>
  <div id="invitation_action" class="clearfix">
    <%= form_cancel_button(f, "Clear", :discard, :remote => true,
                           :class => "left form_toggle_enable", :confirm => "Are you sure?") %>
    <%= f.submit "Send", :name => :send, :class => "right form_toggle_enable" %>
    <%#= f.submit "Send more", :name => :send_more, :class => "right form_toggle_enable" %>
  </div>
<% end %>
